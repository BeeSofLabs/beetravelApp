<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_card_background_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/partial_item_itinerary_card" />

            <include layout="@layout/partial_item_hotel_card" />

            <TextView
                android:id="@+id/itineray_label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/item_hotel_card"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"
                android:gravity="center" />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>