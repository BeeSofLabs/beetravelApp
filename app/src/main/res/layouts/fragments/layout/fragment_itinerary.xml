<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_package"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight=".2"
        android:contentDescription="@string/image_package"
        android:scaleType="fitXY"
        android:src="@drawable/mountain_view" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_weight="3" />

    <me.relex.circleindicator.CircleIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pagerIndicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:ci_drawable="@drawable/pager_indicator_selected"
        app:ci_drawable_unselected="@drawable/pager_indicator_default" />

